<div class="container">
  <h1>Create new User</h1>

  <%= form_with model: @user do |form| %>
    <div class="label-inputs">
      <div><%= label(:user, :username, "Username:")%></div>
      <div><%= form.text_field :username, placeholder: "Username" %></div>
    </div>

    <div class="label-inputs">
      <div><%= label(:user, :email, "Email:")%></div>
      <div><%= form.email_field :email, placeholder: "example@email.com" %></div>
    </div>

    <div class="label-inputs">
      <div><%= label(:user, :password, "Password:")%></div>
      <div><%= form.password_field :password, placeholder: "Enter your password ..." %></div>
    </div>

    <%= form.submit %>
  <% end %>

  <% if @user.errors.any? %>
    <div id="error_explanation" style="display: flex; flex-direction: column; align-items: center; justify-content: center; margin: 50px;">
      <h3><%= pluralize(@user.errors.count, "error") %> prohibited this @User from being saved:</h3>

      <ul style="color: red">
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

