<div class="container">
  <h1>Edit User</h1>

  <% if @user.errors.any? %>
    <div id="error_explanation" style="display: flex; flex-direction: column; align-items: center; justify-content: center;">
      <h3><%= pluralize(@user.errors.count, "error") %> prohibited this @User from being updated:</h3>

      <ul style="color: red">
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @user do |form| %>
    <div class="label-inputs">
      <div><%= label(:user, :username, "Username:")%></div>
      <div><%= form.text_field :username, placeholder: "Username" %></div>
    </div>

    <div class="label-inputs">
      <div><%= label(:user, :email, "Email:")%></div>
      <div><%= form.email_field :email, placeholder: "example@email.com" %></div>
    </div>

    <div class="label-inputs">
      <div><%= label(:user, :password, "Password:")%></div>
      <div><%= form.password_field :password, placeholder: "Enter your password ..." %></div>
    </div>

    <%= form.submit %>
  <% end %>
</div>  

<div style="display: flex; justify-content: center; margin: 50px;">
  <ul>
     <% User.all.each do |user| %>
        <li>ID: <%= user.id %> | Username: <%= user.username %> <%= link_to 'Edit', edit_user_path(user) %></li>
      <% end %>
  </ul>
</div>